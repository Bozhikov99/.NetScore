@using Core.ViewModels.Player
@model IEnumerable<ListPlayerModel>

@{
    ViewData["Title"] = "AddPlayers";
}

<h1>AddPlayers</h1>
<form asp-action="AddPlayers">
    <input hidden name="teamId" value=@ViewBag.TeamId />
    @if (Model.Count() != 0)
    {
        <ul>
            @foreach (var p in Model)
            {
                <li>
                    <img src=@p.ImageUrl />
                    <div>
                        <input name="playerIds" type="checkbox" value=@p.Id>
                        <p>@p.FirstName @p.LastName</p>
                    </div>
                </li>
            }
        </ul>
        <button type="submit">Add</button>
    }
</form>
<a asp-action="Squad" asp-route-id="@ViewBag.TeamId" >
back
</a>
